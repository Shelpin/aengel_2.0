{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@elizaos/core": [
                "./packages/core/src/index.ts"
            ],
            "@elizaos/core/*": [
                "./packages/core/src/*"
            ],
            "@elizaos/adapter-sqlite": [
                "packages/adapter-sqlite/src/index.ts"
            ],
            "@elizaos/adapter-sqlite/*": [
                "packages/adapter-sqlite/src/*"
            ],
            "@elizaos/plugin-bootstrap": [
                "packages/plugin-bootstrap/src/index.ts"
            ],
            "@elizaos/plugin-bootstrap/*": [
                "packages/plugin-bootstrap/src/*"
            ],
            "@elizaos/telegram-client": [
                "packages/clients/telegram/src/index.ts"
            ],
            "@elizaos/telegram-client/*": [
                "packages/clients/telegram/src/*"
            ],
            "@elizaos/dynamic-imports": [
                "packages/dynamic-imports/src/index.ts"
            ],
            "@elizaos/dynamic-imports/*": [
                "packages/dynamic-imports/src/*"
            ],
            "@elizaos/telegram-multiagent": [
                "packages/telegram-multiagent/src/index.ts"
            ],
            "@elizaos/telegram-multiagent/*": [
                "packages/telegram-multiagent/src/*"
            ],
            "@elizaos/client-direct": [
                "packages/client-direct/src/index.ts"
            ],
            "@elizaos/client-direct/*": [
                "packages/client-direct/src/*"
            ],
            "@elizaos/agent": [
                "packages/agent/src/index.ts"
            ],
            "@elizaos/agent/*": [
                "packages/agent/src/*"
            ],
            "@elizaos/cli": [
                "packages/cli/src/index.ts"
            ],
            "@elizaos/cli/*": [
                "packages/cli/src/*"
            ]
        }
    },
    "files": [],
    "references": [
        {
            "path": "packages/core"
        },
        {
            "path": "packages/adapter-sqlite"
        },
        {
            "path": "packages/plugin-bootstrap"
        },
        {
            "path": "packages/clients/telegram"
        },
        {
            "path": "packages/dynamic-imports"
        },
        {
            "path": "packages/telegram-multiagent"
        },
        {
            "path": "packages/client-direct"
        },
        {
            "path": "packages/agent"
        },
        {
            "path": "packages/cli"
        }
    ],
    "exclude": [
        "**/dist",
        "**/*.d.ts",
        "**/__tests__",
        "node_modules",
        "**/node_modules"
    ]
}