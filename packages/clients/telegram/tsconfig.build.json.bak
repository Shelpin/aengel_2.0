{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2017",
            "esnext",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.d.ts",
        "node_modules"
    ]
}