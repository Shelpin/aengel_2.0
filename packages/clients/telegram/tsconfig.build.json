{
  "extends": "../../../tsconfig.build.base.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "@elizaos/*": ["*/src"]
    },
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "module": "nodenext",
    "lib": [
      "es2021",
      "dom"
    ],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "composite": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}