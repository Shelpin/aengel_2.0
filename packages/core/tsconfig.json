{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "lib": [
      "es2021",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      // "@elizaos/types": [
      //   "../types/dist"
      // ],
      // "@elizaos/types/*": [
      //   "../types/dist/*"
      // ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "references": []
}