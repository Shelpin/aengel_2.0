{
  "extends": "../../tsconfig.build.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "lib": [
      "es2021",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}