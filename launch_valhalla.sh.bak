            ;;
        code_samurai_77)
            BOT_TOKEN=$CODE_SAMURAI_BOT_TOKEN
            ;;
        bitcoin_maxi_420)
            BOT_TOKEN=$BITCOIN_MAXI_BOT_TOKEN
            ;;
    esac
    
