      --character="characters/${agent}.json" \
      --clients=@elizaos/client-telegram \
      --plugins=@elizaos/telegram-multiagent \
      --log-level=debug \
      --port=$PORT > $LOG_DIR/${agent}.log 2>&1 &
    
