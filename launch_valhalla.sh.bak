    AGENT_PID=$!
    echo $AGENT_PID > $LOG_DIR/${agent}.pid
    echo -e "   ${GREEN}Started ${agent} with PID: ${AGENT_PID}${NC}"
    
    # Increment port for next agent
    PORT=$((PORT + 1))
    
    # Wait between agent launches
    echo -e "   ${BLUE}Waiting 10 seconds before next agent launch...${NC}"
    sleep 10
done

