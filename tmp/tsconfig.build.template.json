{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.d.ts",
        "node_modules"
    ]
}