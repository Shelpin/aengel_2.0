{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "node",
            "jest"
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@elizaos/*": [
                "packages/*/src"
            ]
        }
    },
    "include": [
        "packages/*/src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/*.test.ts"
    ]
}